<Page x:Class="Pomodoro.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pomodoro.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="455" d:DesignWidth="780"
      Title="LoginPage">
    <Grid  Background="#FF7C7C7C">
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Height="61" Margin="208,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374" Background="#FFC13A3A" FontSize="40"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="61" Margin="208,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374" Background="#FFC13A3A" FontSize="40"/>
        <Button x:Name="LoginButton" Content="Log in" HorizontalAlignment="Left" Height="77" Margin="286,316,0,0" VerticalAlignment="Top" Width="213" Background="#FF9B2323" FontSize="40" Click="LoginButton_Click"/>
        <Button x:Name="CreateAccountButton" Content="Create new account" HorizontalAlignment="Left" Height="56" Margin="614,389,0,0" VerticalAlignment="Top" Width="156" Background="#FF9B2323" FontSize="15" Click="CreateAccountButton_Click"/>
    </Grid>

</Page>
