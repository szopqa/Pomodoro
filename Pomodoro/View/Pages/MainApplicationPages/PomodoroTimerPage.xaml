<Page x:Class="Pomodoro.View.Pages.MainApplicationPages.PomodoroTimerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pomodoro.View.Pages.MainApplicationPages"
      mc:Ignorable="d" 
      d:DesignHeight="435" d:DesignWidth="490"
      Title="PomodoroTimerPage" Loaded="PomodoroTimerOnload">


    <Grid>
        <Image x:Name="StopwatchIcon" Source="../../../Resources/Icons/working_session_stopwatch.png" Height="256" Margin="117,63,117,0" VerticalAlignment="Top"/>
        <Button x:Name="StartWorkingBtn" Content="Start working session" HorizontalAlignment="Left" Height="53" Margin="50,354,0,0" VerticalAlignment="Top" Width="137" Click="StartWorkingSession_Click"/>
        <Button x:Name="StartRestBtn" Content="Take a break" Height="53" Margin="302,354,51,0" VerticalAlignment="Top" Click="BreakButtonClick"/>
        <Label x:Name="MinutesLbl" Content ="00" Height="76" Margin="172,159,253,0" VerticalAlignment="Top" FontSize="50"/>
        <Label x:Name="SecondsLbl"  Content="00" Height="65" Margin="257,159,166,0" VerticalAlignment="Top" FontSize="50"/>
        <Label x:Name="Colon" Content =" : " Height="65" Margin="223,153,224,0" VerticalAlignment="Top" FontSize="50"/>

    </Grid>
</Page>
